<Window x:Class="CSVEditor.View.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVEditor.View"
        xmlns:vm="clr-namespace:CSVEditor.ViewModel;assembly=CSVEditor.ViewModel"
        xmlns:commands="clr-namespace:CSVEditor.ViewModel.Commands;assembly=CSVEditor.ViewModel"
        xmlns:converters="clr-namespace:CSVEditor.ViewModel.Converters;assembly=CSVEditor.ViewModel"
        xmlns:uc="clr-namespace:CSVEditor.View.Controls"
        mc:Ignorable="d"
        Title="CSV Editor" 
        Height="450" 
        Width="1000"
        >

    <Window.Resources>
        <vm:EditorVM x:Key="EditorVM"/>
        <converters:BoolToGitRepoFoundConverter x:Key="BoolToGitRepoFoundConverter"/>
        <converters:AbsPathToFileNameConverter x:Key="AbsPathToFileNameConverter"/>
        <converters:AbsPathToRawTextConverter x:Key="AbsPathToRawTextConverter"/>
    </Window.Resources>

    <Grid DataContext="{StaticResource EditorVM}" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#region Load Repo Section -->
        <Border Style="{StaticResource BaseBorderStyle}"
                Grid.Row="0"
                VerticalAlignment="Center"
                >
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource LeftRoundedBorderStyle}">
                    <Button Grid.Column="0"
                    HorizontalAlignment="Center"
                    Command="{Binding LoadRepositoryCommand}">LOAD</Button>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource RightRoundedBorderStyle}">
                    <TextBlock Text="{Binding RootRepositoryPath}" Margin="10,5"></TextBlock>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource BaseBorderStyle}" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding IsGitRepo, Converter={StaticResource BoolToGitRepoFoundConverter}}"/>
                </Border>
            </Grid>
        </Border>
        <!--#endregion Load Repo Section-->

        <!--#region Main Section -->
        <Border Style="{StaticResource BaseBorderStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Grid.Row="1"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="15"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--#region Loaded files section -->
                <Border Style="{StaticResource BaseBorderStyle}" Grid.Column="0">
                    <Grid VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Loaded CSV files" 
                                   Margin="10,0"
                                   Grid.Row="0"/>
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding CsvFilesStructure}"
                                 SelectedItem="{Binding SelectedDirectory}"
                                 x:Name="DirectoryListBoxOutter"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Stretch"
                                 >
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <uc:DirectoryWithCsvControl 
                                        x:Name="DirectoryListBoxInner" 
                                        DirectoryData="{Binding}"
                                        SelectedFile="{Binding DataContext.SelectedFile, 
                                            Mode=TwoWay, 
                                            RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <!--#endregion Loaded files section-->

                <!--#region GriSplitter -->
                <GridSplitter Grid.Column="1" 
                              ResizeDirection="Columns"
                              HorizontalAlignment="Stretch"
                              Height="100"
                              Background="BlueViolet"
                              VerticalAlignment="Center"
                              Margin="5"
                              ></GridSplitter>
                <!--#endregion GridSplitter-->

                <!--#region EditTab -->
                <Border Style="{StaticResource BaseBorderStyle}" Grid.Column="2">
                    <TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <!--#region RawEdit -->
                        <TabItem Header="Raw Edit">
                            <DockPanel >
                                <uc:FileInfoControl DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Center"
                                                    SelectedText="{Binding SelectedText}"
                                                    FileInfoText="{Binding SelectedFile, Converter={StaticResource AbsPathToFileNameConverter}}"
                                                    />

                                <ToggleButton Content="Edit"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Left"
                                        >
                                    <ToggleButton.LayoutTransform>
                                        <RotateTransform Angle="90"/>
                                    </ToggleButton.LayoutTransform>
                                </ToggleButton>
                                <DataGrid>

                                </DataGrid>
                            </DockPanel>
                        </TabItem>
                        <!--#endregion RawEdit-->

                        <!--#region RawText -->
                        <TabItem Header="Raw File">
                            <Grid x:Name="RawFileStackPanel">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <uc:FileInfoControl Grid.Row="0"
                                                    SelectedText="{Binding SelectedText}"
                                                    FileInfoText="{Binding SelectedFile, Converter={StaticResource AbsPathToFileNameConverter}}"
                                                    />
                                <Border Style="{StaticResource BaseBorderStyle}"
                                        Grid.Row="1"
                                        >
                                    <TextBox Text="{Binding SelectedFile, Converter={StaticResource AbsPathToRawTextConverter}}"
                                                VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                                />
                                </Border>
                            </Grid>
                        </TabItem>
                        <!--#endregion RawText-->
                    </TabControl>
                </Border>
                <!--#endregion EditTab -->
            </Grid>
        </Border>
        <!--#endregion Main Section-->
    </Grid>
</Window>
