<UserControl x:Class="CSVEditor.View.Controls.EditGridCellElements.ImageButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVEditor.View.Controls.EditGridCellElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Margin="{Binding ButtonMargin}"
                Padding="{Binding ButtonPadding}"
                Command="{Binding Command}"
                CommandParameter="{Binding CommandParameter}">
            <Image Source="{Binding ImageSource}"
                   Stretch="{Binding ImageStretch}"
                   />
        </Button>
            
    </Grid>
</UserControl>
