<UserControl x:Class="CSVEditor.View.Controls.FileInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVEditor.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="{Binding SelectedText}" 
               x:Name="SelectedTextLabel"
                Grid.Row="0" 
                Grid.Column="0" 
                Margin="10,0,0,0"
                VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" 
                   x:Name="FileInfoTextBox"
                    Grid.Row="0"  
                    Text="{Binding FileInfoText}"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Margin="0,0,10,0"
                                   />
    </Grid>
</UserControl>
