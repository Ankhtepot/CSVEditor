<UserControl x:Class="CSVEditor.View.Controls.FileOperationsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVEditor.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <local:ImageButtonControl Command="{Binding SaveCommand}" 
                                  CornerRadius="5"
                                  ImageStretch="Fill" 
                                  Width="30" 
                                  Height="30">
            <local:ImageButtonControl.ImageSource>
                <BitmapImage UriSource="..\Images\icons8-save-close-50.png"/>
            </local:ImageButtonControl.ImageSource>
        </local:ImageButtonControl>
    </Grid>
</UserControl>
