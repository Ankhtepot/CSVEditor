            <local:ImageButtonControl.ImageSource>
                <BitmapImage UriSource="..\Images\icons8_chevron_right_50px.png"/>
            </local:ImageButtonControl.ImageSource>
        </local:ImageButtonControl>
        <local:ImageButtonControl Command="{Binding GitVM.PullCommand}" 
                                  Style="{StaticResource ImageButtonStyle}"
                                  Enabled="{Binding GitVM.IsGitRepo}"
                                  Grid.Column="5"
                                  ToolTip="{x:Static p:Resources.PullRepositoryText}">
            <local:ImageButtonControl.ImageSource>
                <BitmapImage UriSource="..\Images\icons8-thick-arrow-pointing-down-50.png"/>
            </local:ImageButtonControl.ImageSource>
        </local:ImageButtonControl>
        <local:ImageButtonControl Command="{Binding GitVM.PushCommand}" 
                                  Style="{StaticResource ImageButtonStyle}"
                                  Enabled="{Binding GitVM.IsGitRepo}"
                                  Grid.Column="6"
                                  ToolTip="{x:Static p:Resources.PushRepositoryText}">
            <local:ImageButtonControl.ImageSource>
                <BitmapImage UriSource="..\Images\icons8-up-right-50.png"/>
            </local:ImageButtonControl.ImageSource>
        </local:ImageButtonControl>-->
    </Grid>
</UserControl>
